<div class="img-and-name mb-3">
  <% if @user.photo.attached? %>
    <%= image_tag(@user.photo, class: "w-56 rounded-full") %>
  <% end %> 
  <p class="font-bold text-center p-3">
    <%= @user.full_name %> <br>
    <small class="text-gray-700"><%= @user.username %></small>
  </p>
</div>
<div class="info text-center justify-between flex">
  <p class="p-3">
      <%= @user.post_count %> <br> Posts
  </p>
  <p class="p-3">
      <%= @user.follow_count %> <br> Following
  </p>
  <p class="p-3">
      <%= @user.follower_count %> <br> Followers
  </p>
</div>
<div class="button flex justify-center">
  <%= follow_actions(@user) %>
</div>

<%= user_photo_upload(current_user)%>

<%# Follower list %>
<% @user.following_users.each do |person| %>
  <div class="person-box bg-white hover:shadow-2xl shadow-lg rounded-lg flex px-10 m-3 py-3 h-24 items-center justify-between">
    <% if person.photo.attached? %>
              <%= image_tag(person.photo, class: "w-16 rounded-full") %>
          <% end %>
    <%= link_to person.full_name, user_path(person) %></p>
  </div>
<% end %>
